{
	"include": ["src"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"target": "esnext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmit": false
	}
}
