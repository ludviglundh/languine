{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env.*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "format": {},
    "start": {
      "cache": false,
      "persistent": true
    }
  }
} 